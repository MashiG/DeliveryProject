<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle"
    >
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_settings"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageButton4" />
    <EditText
        android:id="@+id/assigndeliveryagent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Assign Delivery Agent"
        android:textSize="24sp"

        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="87dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Type Delivery Agent User Name or User ID:"
        android:background="@android:color/transparent"
        android:layout_below="@+id/assigndeliveryagent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/editText"

        android:layout_width="250dp"
        style="@style/editText_style"
        android:inputType="textEmailAddress"
        android:textColorLink="@android:color/background_dark"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageButton4"
        android:layout_toStartOf="@+id/imageButton4" />
    <Button

        android:id="@+id/buttonallocate"
        android:text="Allocate"
        android:textAllCaps="false"
        android:layout_width="100dp"
        style="@style/button_style"
        android:layout_alignBaseline="@+id/buttonclear"
        android:layout_alignBottom="@+id/buttonclear"
        android:layout_alignLeft="@+id/assigndeliveryagent"
        android:layout_alignStart="@+id/assigndeliveryagent" />
    <Button

        android:id="@+id/buttonclear"
        android:text="Clear"
        android:textAllCaps="false"
        android:layout_width="100dp"
        style="@style/button_style"
        android:layout_marginTop="90dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />
</RelativeLayout>